                        <a class="crud-button link-danger fa fa-trash mx-2 confirm-action" href="{{ path('app_user_delete', {'id':user.id}) }}" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cet utilisateur ?')"></a>
                    </td> #}

                    <td class="align-middle">
                        <a class="crud-button link-primary fa fa-pen-square mx-2" aria-label="Editer" href="{{ path('app_partner_edit', {'id': partner.id}) }}"></a>
                        <a class="crud-button link-success fa fa-eye mx-2" href="{{ path('app_partner_show', {'id': partner.id}) }}"></a>
                        <a class="crud-button link-danger fa fa-trash mx-2 confirm-action" href="{{ path('app_partner_delete', {'id':partner.id}) }}" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer cet utilisateur ?')"></a>
                    </td>
                </tr>
                
            {% endfor %}
            
        </tbody>
    
    </table>
