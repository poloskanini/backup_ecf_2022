{% extends 'base.html.twig' %}

{% block title %} {{parent() }} | Utilisateurs{% endblock %}

{% block header %}{% endblock %}
{% block topbar %}{% endblock %}
{% block searchBar %}{% endblock %}

{% block content %}

<div class="container-fluid">

    {# Flash message "Correctement ajouté" #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="my-4">Utilisateurs :</h1>

    
    <div class="responsive-table-line">

        <table class="table table-hover text-center">
            <thead>
                <tr class="">
                    <th scope="col">ID</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Email</th>
                    <th scope="col">Role</th>
                    <th scope="col">Actif</th>
                    <th scope="col">Planning</th>
                    <th scope="col">Newsletter</th>
                    <th scope="col">Boissons</th>
                    <th scope="col">Sms</th>
                    <th scope="col">Concours</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr class="">
                        <td data-title="ID :">{{ user.id }}</td>
                        <td data-title="Nom :">{{ user.name }}</td>
                        <td data-title="Email :">{{ user.email }}</td>
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' %}
                                <td data-title="Role :">
                                    <div class="form-check form-check-admin">Admin</div>
                                </td>
                                {% elseif role == 'ROLE_PARTNER' %}
                                <td data-title="Role :">
                                    <div class="form-check form-check-partner">Partenaire</div>
                                </td>
                                {% elseif role == 'ROLE_STRUCTURE' %}
                                <td data-title="Role :">
                                    <div class="form-check form-check-structure">Structure</div>
                                </td>
                            {% endif %}
                        {% endfor %}
                        <td data-title="Actif :" class="align-middle">
                            {% if user.isActive == true %}
                                    <div class="form-check form-check-active">Actif</div>
                                {% else %}
                                    <div class="form-check form-check-inactive">Inactif</div>
                                {% endif %}
                        </td>
                        <td data-title="Planning :" class="align-middle">
                            {% if user.isPlanning == true %}
                                    <div class="form-check form-check-active">Oui</div>
                                {% else %}
                                    <div class="form-check form-check-inactive">Non</div>
                                {% endif %}
                        </td>
                        <td data-title="Newsletter :" class="align-middle">
                            {% if user.isNewsletter == true %}
                                    <div class="form-check form-check-active">Oui</div>
                                {% else %}
                                    <div class="form-check form-check-inactive">Non</div>
                                {% endif %}
                        </td>
                        <td data-title="Boissons :" class="align-middle">
                            {% if user.isBoissons == true %}
                                    <div class="form-check form-check-active">Oui</div>
                                {% else %}
                                    <div class="form-check form-check-inactive">Non</div>
                                {% endif %}
                        </td>
                        <td data-title="SMS :" class="align-middle">
                            {% if user.isSMS == true %}
                                    <div class="form-check form-check-active">Oui</div>
                                {% else %}
                                    <div class="form-check form-check-inactive">Non</div>
                                {% endif %}
                        </td>
                        <td data-title="Concours :" class="align-middle">
                            {% if user.isConcours == true %}
                                    <div class="form-check form-check-active">Oui</div>
                                {% else %}
                                    <div class="form-check form-check-inactive">Non</div>
                                {% endif %}
                        </td>
                        
                        <td class="align-middle">
                            <a class="crud-button link-primary fa fa-pen-square mx-2" href="{{ path('app_user_edit', {'id': user.id}) }}"></a>
                            <a class="crud-button link-success fa fa-eye mx-2" href="{{ path('app_user_show', {'id': user.id}) }}"></a>
                            <a class="crud-button link-danger fa fa-trash mx-2 confirm-action" data-bs-toggle="modal" data-bs-target="#modal-confirm" href="{{ path('app_user_delete', {'id': user.id}) }}"onclick="return confirm('Voulez-vous vraiment supprimer ?')"></a>
                        </td>
                    </tr>
                    
                {% endfor %}
                
            </tbody>
        
        </table>
    </div>
    
    <a class="btn btn-primary mb-5 ml-auto" href="{{ path('app_user_new') }}">Créer un nouvel utilisateur </a>

</div>

{% endblock %}