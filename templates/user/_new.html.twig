{% extends 'base.html.twig' %}

{% block title %} {{parent() }} | Nouvel utilisateur{% endblock %}

{% block header %}{% endblock %}
{% block topbar %}{% endblock %}
{% block searchBar %}{% endblock %}

{% block content %}
<div class="container-fluid">

  <a class="back-button" href="{{ path('app_user_index') }}">
  <i class="fa fa-arrow-circle-left"></i>
  Retour
  </a>

    <h1 class="my-4">Cr√©er un nouvel utilisateur</h1>

      {{ form_start(form) }}

        <div class="form-error is-invalid">
            {{ form_errors(form) }}
        </div>

        <div class="form-group">
            {{ form_label(form.name)}}
            {{ form_widget(form.name)}}
            {{ form_errors(form.name)}}
        </div>

        <div class="form-group">
            {{ form_label(form.email)}}
            {{ form_widget(form.email)}}
            {{ form_errors(form.email)}}
        </div>

        <div class="form-group">
            {{ form_label(form.password)}}
            {{ form_widget(form.password)}}
            {{ form_errors(form.password)}}
        </div>

        <div class="form-group">
          {{ form_row(form.roles)}}
        </div>

        <div class="form-group">
            {{ form_label(form.isActive)}}
            {{ form_widget(form.isActive)}}
            {{ form_errors(form.isActive)}}
        </div>

        <div class="form-group">
            {{ form_label(form.isPlanning)}}
            {{ form_widget(form.isPlanning)}}
            {{ form_errors(form.isPlanning)}}
        </div>

        <div class="form-group">
            {{ form_label(form.isNewsletter)}}
            {{ form_widget(form.isNewsletter)}}
            {{ form_errors(form.isNewsletter)}}
        </div>

        <div class="form-group">
            {{ form_label(form.isBoissons)}}
            {{ form_widget(form.isBoissons)}}
            {{ form_errors(form.isBoissons)}}
        </div>

        <div class="form-group">
            {{ form_label(form.isSMS)}}
            {{ form_widget(form.isSMS)}}
            {{ form_errors(form.isSMS)}}
        </div>

        <div class="form-group">
            {{ form_label(form.isConcours)}}
            {{ form_widget(form.isConcours)}}
            {{ form_errors(form.isConcours)}}
        </div>

        <input type="submit" class="btn btn-primary mb-4" value="Enregistrer">

      {{ form_end(form) }}
</div>

{% endblock %}