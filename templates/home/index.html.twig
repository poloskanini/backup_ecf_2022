{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} | Dashboard {% endblock %}

{% block header %}{% endblock %}
{% block topbar %}{% endblock %}

{% block content %}
        <div class="container-fluid home-title">
            <h1 class="my-4">Dashboard</h1>
            {% if app.user %}
            <h5>Bienvenue {{ app.user.email}}.</h>
            {% endif %}
            <h6>Vous êtes dans l'administration de "STUDI FITNESS GROUP".</h6>
            <p>Tu t'appelles {{ app.user.name }}, ton adresse mail est {{ app.user.email }}, tu possèdes l'ID {{ app.user.id }} et ton compte est {% if app.user.isActive == 1 %} Actif {% else %}
                Inactif {% endif %}
            </p>
        </div>

        <div class="boxes container-fluid">
            <div class="box">
                <i class="fa fa-users"></i>
                <div class="box-data">
                    <h3>1</h3>
                    Nombre d'utilisateurs
                </div>
            </div>

            <div class="box">
                <i class="fa fa-handshake"></i>
                <div class="box-data">
                    <h3>1</h3>
                    Nombre de Partenaires
                </div>
            </div>

            <div class="box">
                <i class="fa fa-building"></i>
                <div class="box-data">
                    <h3>23</h3>
                    Nombre de Structures
                </div>
            </div>
            
        </div>

        <div class="container-fluid py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="col d-flex align-items-center">
                            <div class="card-body text-black text-center">
                                <div class="d-flex align-items-center justify-content-center mb-3 pb-1 fs-3 ">
                                    <h4>Vos fonctionnalités activées</h4>
                                </div>
                                <div class="toggle-permissions text-center my-5">
                                    <div class="toggle-permissions-wrapper d-flex justify-content-around my-4 flex-wrap">
                                        <div class="row">
                                        <div class="col permission newsletter">
                                            <i class="fa-solid fa-calendar-days"></i>
                                            <h6 class="permission-title">Planning</h6>
                                            <label class="switch">
                                                <input type="checkbox" {% if app.user.isPlanning == 1 %} checked {% endif %} disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col permission newsletter">
                                            <i class="fa-solid fa-envelope"></i>
                                            <h6 class="permission-title">Newsletter</h6>
                                            <label class="switch">
                                                <input type="checkbox" {% if app.user.isNewsletter == 1 %} checked {% endif %} disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col permission newsletter">
                                            <i class="fas fa-cocktail"></i>
                                            <h6 class="permission-title">Boissons</h6>
                                            <label class="switch">
                                                <input type="checkbox" {% if app.user.isBoissons == 1 %} checked {% endif %} disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col permission newsletter">
                                            <i class="fa-solid fa-comment-sms"></i>
                                            <h6 class="permission-title">SMS</h6>
                                            <label class="switch">
                                                <input type="checkbox" {% if app.user.isSMS == 1 %} checked {% endif %} disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col permission newsletter">
                                            <i class="fa-solid fa-trophy"></i>
                                            <h6 class="permission-title">Concours</h6>
                                            <label class="switch">
                                                <input type="checkbox" {% if app.user.isConcours == 1 %} checked {% endif %} disabled>
                                                <span class="slider round"></span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       
        </div>

{% endblock %}
