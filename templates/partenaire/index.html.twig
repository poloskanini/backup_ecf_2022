{% extends 'base.html.twig' %}

{% block content %}

<div class="container">

    <h1>Partenaires :</h1>

    {# Flash message "Correctement ajouté" #}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

        <table class="table">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Password</th>
                    <th scope="col">Planning</th>
                    <th scope="col">Newsletter</th>
                    <th scope="col">Boissons</th>
                    <th scope="col">Sms</th>
                    <th scope="col">Promotions</th>
                    <th scope="col">Concours</th>
                </tr>
            </thead>

            <tbody>
                {% for partenaire in partenaires %}
                    <tr class="">
                        <th scope="row">{{ partenaire.id }}</th>
                        <td>{{ partenaire.name }}</td>
                        <td>{{ partenaire.email }}</td>
                        <td>{{ partenaire.password }}</td>
                     
                        <td>
                            {% if partenaire.planning == true %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="1" checked="checked" disabled>
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="0" disabled>
                                {% endif %}
                        </td>
                        <td>
                            {% if partenaire.newsletter == true %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="1" checked="checked" disabled>
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="0" disabled>
                                {% endif %}
                        </td>
                        <td>
                            {% if partenaire.boissons == true %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="1" checked="checked" disabled>
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="0" disabled>
                                {% endif %}
                        </td>
                        <td>
                            {% if partenaire.sms == true %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="1" checked="checked" disabled>
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="0" disabled>
                                {% endif %}
                        </td>
                        <td>
                            {% if partenaire.promotions == true %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="1" checked="checked" disabled>
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="0" disabled>
                                {% endif %}
                        </td>
                        <td>
                            {% if partenaire.concours == true %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="1" checked="checked" disabled>
                                </div>
                                {% else %}
                                <div class="form-check form-switch">
                                    <input class="form-check-input" role="switch" id="check" name="etat" type="checkbox" value="0" disabled>
                                {% endif %}
                        </td>

                        <td>
                            <a class="btn btn-secondary mx-2" href="{{ path('app_partenaire_show', {'id': partenaire.id}) }}">Voir</a>
                            <a class="btn btn-primary mx-2" href="{{ path('app_partenaire_edit', {'id': partenaire.id}) }}">Editer</a>
                            <a class="btn btn-danger mx-2" href="{{ path('app_partenaire_delete', {'id': partenaire.id}) }}">Supprimer</a>
                        </td>
                    </tr>
                    
                {% endfor %}
                
            </tbody>
        
        </table>

        <a class="btn btn-success" href="{{ path('app_partenaire_new') }}">Créer un partenaire </a>

</div>

{% endblock %}
